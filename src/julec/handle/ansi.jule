// ANSI sequences.
const (
	AnsiReset = "\033[0m"
	AnsiBold = "\u001b[1m"
	AnsiRed = "\033[31m"
	AnsiBrightMagenta = "\033[95m"
)

struct AnsiEscape{}

impl AnsiEscape {
	// Reset all ANSI formatting.
	static fn Reset() {
		print(AnsiReset)
	}

	// Print with ANSI sequence.
	// Resets ANSI after print.
	static fn Print(escape: str, text: str) {
		print(escape)
		print(text)
		AnsiEscape.Reset()
	}
}