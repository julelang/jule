let _gamP: [...]f64 = [
	1.60119522476751861407e-04,
	1.19135147006586384913e-03,
	1.04213797561761569935e-02,
	4.76367800457137231464e-02,
	2.07448227648435975150e-01,
	4.94214826801497100753e-01,
	9.99999999999999996796e-01,
]
let _gamQ: [...]f64 = [
	-2.31581873324120129819e-05,
	5.39605580493303397842e-04,
	-4.45641913851797240494e-03,
	1.18139785222060435552e-02,
	3.58236398605498653373e-02,
	-2.34591795718243348568e-01,
	7.14304917030273074085e-02,
	1.00000000000000000320e+00,
]
let _gamS: [...]f64 = [
	7.87311395793093628397e-04,
	-2.29549961613378126380e-04,
	-2.68132617805781232825e-03,
	3.47222221605458667310e-03,
	8.33333333333482257126e-02,
]

// Gamma function computed by Stirling's formula.
// The pair of results must be multiplied together to get the actual answer.
// The multiplication is left to the caller so that, if careful, the caller can avoid
// infinity for 172 <= x <= 180.
// The polynomial is valid for 33 <= x <= 172; larger values are only used
// in reciprocal and produce denormalized floats. The lower precision there
// masks any imprecision in the polynomial.
fn stirling(x: f64): (f64, f64) {
	if x > 200 {
		ret inf(1), 1
	}
	const SQRT_TWO_PI  = 2.506628274631000502417
	const MAX_STIRLING = 143.01608
	let mut w = 1 / x
	w = 1 + w*((((_gamS[0]*w+_gamS[1])*w+_gamS[2])*w+_gamS[3])*w+_gamS[4])
	let mut y1 = exp(x)
	let mut y2 = 1.0
	if x > MAX_STIRLING { // avoid pow() overflow
		let v = pow(x, 0.5*x-0.25)
		y1, y2 = v, v/y1
	} else {
		y1 = pow(x, x-0.5) / y1
	}
	ret y1, SQRT_TWO_PI * w * y2
}

// Returns the gamma function of x.
//
// Special cases are:
//  gamma(+inf) = +inf
//  gamma(+0) = +inf
//  gamma(-0) = -inf
//  gamma(x) = nan for integer x < 0
//  gamma(-inf) = nan
//  gamma(nan) = nan
pub fn gamma(mut x: f64): f64 {
	const EULER = 0.57721566490153286060651209008240243104215933593992 // A001620
	// special cases
	match {
	case is_neg_int(x) || is_inf(x, -1) || is_nan(x):
		ret nan()
	case is_inf(x, 1):
		ret inf(1)
	case x == 0:
		if signbit(x) {
			ret inf(-1)
		}
		ret inf(1)
	}
	let mut q = abs(x)
	let mut p = floor(q)
	if q > 33 {
		if x >= 0 {
			let (y1, y2) = stirling(x)
			ret y1 * y2
		}
		// Note: x is negative but (checked above) not a negative integer,
		// so x must be small enough to be in range for conversion to int64.
		// If |x| were >= 2⁶³ it would have to be an integer.
		let mut signgam = 1
		let ip = i64(p)
		if ip&1 == 0 {
			signgam = -1
		}
		let mut z = q - p
		if z > 0.5 {
			p = p + 1
			z = q - p
		}
		z = q * sin(PI*z)
		if z == 0 {
			ret inf(signgam)
		}
		let (sq1, sq2) = stirling(q)
		let absz = abs(z)
		let d = absz * sq1 * sq2
		if is_inf(d, 0) {
			z = PI / absz / sq1 / sq2
		} else {
			z = PI / d
		}
		ret f64(signgam) * z
	}

	// Reduce argument
	let mut z = 1.0
	for x >= 3 {
		x = x - 1
		z = z * x
	}
	for x < 0 {
		if x > -1e-09 {
			goto small
		}
		z = z / x
		x = x + 1
	}
	for x < 2 {
		if x < 1e-09 {
			goto small
		}
		z = z / x
		x = x + 1
	}

	if x == 2 {
		ret z
	}

	x = x - 2
	p = (((((x*_gamP[0]+_gamP[1])*x+_gamP[2])*x+_gamP[3])*x+_gamP[4])*x+_gamP[5])*x + _gamP[6]
	q = ((((((x*_gamQ[0]+_gamQ[1])*x+_gamQ[2])*x+_gamQ[3])*x+_gamQ[4])*x+_gamQ[5])*x+_gamQ[6])*x + _gamQ[7]
	ret z * p / q

small:
	if x == 0 {
		ret inf(1)
	}
	ret z / ((1 + EULER*x) * x)
}

fn is_neg_int(x: f64): bool {
	if x < 0 {
		let (_, xf) = modf(x)
		ret xf == 0
	}
	ret false
}
