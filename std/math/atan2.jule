// Returns the arc tangent of y/x, using
// the signs of the two to determine the quadrant
// of the return value.
//
// Special cases are (in order):
//  Atan2(y, NaN) = NaN
//  Atan2(NaN, x) = NaN
//  Atan2(+0, x>=0) = +0
//  Atan2(-0, x>=0) = -0
//  Atan2(+0, x<=-0) = +Pi
//  Atan2(-0, x<=-0) = -Pi
//  Atan2(y>0, 0) = +Pi/2
//  Atan2(y<0, 0) = -Pi/2
//  Atan2(+Inf, +Inf) = +Pi/4
//  Atan2(-Inf, +Inf) = -Pi/4
//  Atan2(+Inf, -Inf) = 3Pi/4
//  Atan2(-Inf, -Inf) = -3Pi/4
//  Atan2(y, +Inf) = 0
//  Atan2(y>0, -Inf) = +Pi
//  Atan2(y<0, -Inf) = -Pi
//  Atan2(+Inf, x) = +Pi/2
//  Atan2(-Inf, x) = -Pi/2
fn Atan2(y: f64, x: f64): f64 {
	// special cases
	match {
	| IsNaN(y) | IsNaN(x):
		ret NaN()
	| y == 0:
		if x >= 0 && !Signbit(x) {
			ret Copysign(0, y)
		}
		ret Copysign(Pi, y)
	| x == 0:
		ret Copysign(Pi/2, y)
	| IsInf(x, 0):
		if IsInf(x, 1) {
			match {
			| IsInf(y, 0):
				ret Copysign(Pi/4, y)
			|:
				ret Copysign(0, y)
			}
		}
		match {
		| IsInf(y, 0):
			ret Copysign(3*Pi/4, y)
		|:
			ret Copysign(Pi, y)
		}
	| IsInf(y, 0):
		ret Copysign(Pi/2, y)
	}

	// Call atan and determine the quadrant.
	q := Atan(y / x)
	if x < 0 {
		if q <= 0 {
			ret q + Pi
		}
		ret q - Pi
	}
	ret q
}