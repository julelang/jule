// Returns sqrt(p*p + q*q), taking care to avoid
// unnecessary overflow and underflow.
//
// Special cases are:
//  hypot(±inf, q) = +inf
//  hypot(p, ±inf) = +inf
//  hypot(nan, q) = nan
//  hypot(p, nan) = nan
pub fn hypot(mut p: f64, mut q: f64): f64 {
    // special cases
    match {
    | is_inf(p, 0) | is_inf(q, 0):
        ret inf(1)
    | is_nan(p) | is_nan(q):
        ret nan()
    }
    p, q = abs(p), abs(q)
    if p < q {
        p, q = q, p
    }
    if p == 0 {
        ret 0
    }
    q = q / p
    ret p * sqrt(1+q*q)
}
