use "std/sys"

fn stat(path: str)!: FileInfo {
	if path == "" {
		error(sys::ENOENT)
	}
	mut handle := sys::SysStat{}
	sys::Stat(path, handle) else { error(error) }
	mut stat := FileInfo{}
	fillFileStatFromSys(stat, handle)
	stat.sys = handle
	ret stat
}

fn lstat(path: str)!: FileInfo {
	if path == "" {
		error(sys::ENOENT)
	}
	mut handle := sys::SysStat{}
	sys::Lstat(path, handle) else { error(error) }
	mut stat := FileInfo{}
	fillFileStatFromSys(stat, handle)
	stat.sys = handle
	ret stat
}