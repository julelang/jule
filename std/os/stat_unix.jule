use "std/sys"

fn stat(path: str)!: FileInfo {
	if path == "" {
		error(sys::ENOENT)
	}
	handle := ignoringEINTR2(fn()!: sys::SysStat {
		mut handle := sys::SysStat{}
		sys::Stat(path, &handle)?
		ret handle
	})?
	mut stat := FileInfo{}
	fillFileStatFromSys(&stat, handle)
	stat.sys = handle
	ret stat
}

fn lstat(path: str)!: FileInfo {
	if path == "" {
		error(sys::ENOENT)
	}
	handle := ignoringEINTR2(fn()!: sys::SysStat {
		mut handle := sys::SysStat{}
		sys::Lstat(path, &handle)?
		ret handle
	})?
	mut stat := FileInfo{}
	fillFileStatFromSys(&stat, handle)
	stat.sys = handle
	ret stat
}