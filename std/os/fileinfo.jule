// Describes a file and is returned by [Stat].
struct FileInfo {
	mode: FileMode
	size: i64
}

impl FileInfo {
	// Reports path is directory or not.
	fn IsDir(self): bool { ret self.mode&ModeDir == ModeDir }

	// Returns mode of the [FileInfo].
	fn Mode(self): FileMode { ret self.mode }

	// Total size in bytes of regular file or symbolic link.
	fn Size(self): i64 { ret self.size }
}