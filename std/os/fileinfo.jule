enum fileinfoMode {
	Na: 0 << 0,
	Dir: 1 << 0,
	Reg: 1 << 1,
}

// Describes a file and is returned by [Stat].
struct FileInfo {
	mode: fileinfoMode
	size: uint
}

impl FileInfo {
	// Reports path is directory or not.
	fn IsDir(self): bool { ret self.mode&fileinfoMode.Dir == fileinfoMode.Dir }

	// Reports path is regular file or not.
	fn IsReg(self): bool { ret self.mode&fileinfoMode.Reg == fileinfoMode.Reg }

	// Total size in bytes of regular file or symbolic link.
	fn Size(self): uint { ret self.size }
}