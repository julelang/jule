use "std/internal/poll"
use "std/sys"

const devNull = "/dev/null"

fn openFile(path: str, flag: int, perm: FileMode)!: &File {
	if path == "" {
		error(sys::ENOENT)
	}
	fd := sys::Open(path, flag|sys::O_CLOEXEC, syscallMode(perm))?
	ret newFile(u64(fd), poll::File)?
}

fn newFile(h: u64, mut flags: int)!: &File {
	mut fd := &poll::FD{
		File: u64(h),
		Flags: flags,
		IsStream: true,
		ZeroReadIsEOF: true,
	}
	fd.Init()?
	ret &File{fd: fd}
}

fn remove(path: str)! {
	sys::Unlink(path)?
}