// Directory entry.
struct DirEntry {
	Name: str
	Stat: FileInfo
}

// Reads the named directory and returns all its directory entries can read.
fn ReadDir(path: str)!: (dirents: []DirEntry) {
	ret readDir(path)?
}

// Creates directory.
fn Mkdir(path: str)! {
	longPath := fixLongPath(path)
	mkdir(longPath)?
}

// Removes empty directory.
fn Rmdir(path: str)! {
	rmdir(path)?
}