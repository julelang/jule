use std::jule::lex::{File}

// Abstract syntax tree.
pub struct Ast  {
    pub file:           &File
    pub top_directives: []&Directive
    pub use_decls:      []&UseDecl
    pub impls:          []&Impl
    pub comments:       []&Comment

    // Possible types:
    //  &EnumDecl
    //  &FnDecl
    //  &StructDecl
    //  &TraitDecl
    //  &TypeAliasDecl
    //  &VarDecl
    pub decls: []Node
}
