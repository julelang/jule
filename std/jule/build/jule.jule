use "std/jule"
use "std/os/filepath"

// Directory name of Jule C++ API.
const Api = "api"

// Directory name of standard library.
const Stdlib = "std"

// Reports whether file path is Jule source code.
fn IsJule(path: str): bool { ret filepath::Ext(path) == jule::Ext }