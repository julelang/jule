fn findBuiltinDefStdJuleIntegrated(name: str): any {
	match name {
	| "Emit":
		mut funcEmit := builtinFuncsStdInteg[name]
		// Reset generics for every reference because of common instance.
		funcEmit.Generics = nil
		ret funcEmit
	|:
