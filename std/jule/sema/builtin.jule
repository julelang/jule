}

fn findBuiltinDef(name: str): any {
	mut v := findBuiltinVar(name)
	if v != nil {
		ret v
	}
	mut f := findBuiltinFunc(name)
	if f != nil {
		ret f
	}
	mut ta := findBuiltinTypeAlias(name)
	if ta != nil {
		ret ta
	}
	ret nil
}

