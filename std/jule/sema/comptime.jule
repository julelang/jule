		}
		prim := v.Type.Prim()
		if prim == nil || !prim.IsStr() {
			e.pushErr(arg.Token, build::LogMsg.IncompatibleTypes, str(types::Kind.Str), v.Type.Str())
			ret nil
		}
		ident := v.Constant.ReadStr()
		mut f := s.FindField(ident)
		if f == nil {
			e.pushErr(arg.Token, build::LogMsg.ObjHaveNotIdent, s.Decl.Ident, ident)
			ret nil
		}
		v = new(Value, *self.v)
