		mut s := self.v.Type.Struct()
		if s == nil {
			e.pushErr(fc.Token, build::LogMsg.InvalidTypeForFunc, self.v.Type.Str(), "Field")
			ret nil
		}
		mut arg := fc.Args[0]
		mut v := e.evalExpr(arg, evalDefault)
		if v == nil {
			ret nil
		}
		if !v.IsConst() {
			e.pushErr(arg.Token, build::LogMsg.ExprNotConst)
