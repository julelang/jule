use "std/runtime"
use "std/sync/atomic"
use "std/testing"

#test
fn testCond(t: &testing::T) {
	cond := Cond.New(new(Mutex))
	mut ready := new(bool)
	mut wg := &WaitGroup{}
	wg.Add(1)
	co fn() {
		cond.Lock()
		for !*ready {
			cond.Wait()
		}
		cond.Unlock()
		wg.Done()
	}()
	wg.Add(1)
	co fn() {
		cond.Lock()
		*ready = true
		cond.Signal()
		cond.Unlock()
		wg.Done()
	}()
	wg.Wait()
	if !*ready {
		t.Errorf("condition did not set correctly")
	}
}