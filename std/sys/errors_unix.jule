use "std/internal/conv"

cpp let errno: int

// Underlying type of Errno for UNIX.
type errno = uintptr

fn getLastErrno(): Errno { ret Errno(cpp.errno) }

fn formatError(e: Errno): str {
	if 0 <= int(e) && int(e) < len(errors) {
		s := errors[e]
		if s != "" {
			ret s
		}
	}
	ret "errno " + conv::Itoa(int(e))
}