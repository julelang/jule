use "std/internal/conv"

const _NO_ERROR = 0

// Type of error number.
type Errno: uintptr

impl Errno {
	fn Str(self): str {
		ret formatError(*self)
	}
}

// A Signal is a number describing a process signal.
type Signal: int

impl Signal {
	fn Str(self): str {
		if 0 <= *self && int(*self) < len(signals) {
			st := signals[*self]
			if st != "" {
				ret st
			}
		}
		ret "signal " + conv::Itoa(int(*self))
	}
}