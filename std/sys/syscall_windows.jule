fn GetStdHandle(stdh: uintptr): Handle { ret Handle(extern.GetStdHandle(stdh)) }

fn CloseHandle(stdh: Handle)! {
	r := unsafe { extern.CloseHandle(unsafe { (*unsafe)(stdh) }) }
	if !r {
		error(GetLastErrno())
	}
}

