// Read file.
// Passes nil for overlap.
fn ReadFile(h: Handle, buf: []byte)!: int {
	mut read := u32(0)
	ok := unsafe { cpp.ReadFile(cpp.HANDLE(h), &buf[0], cpp.DWORD(len(buf)), (*cpp.DWORD)(&read), nil) }
	if !ok {
		error(GetLastErrno())
	}
	ret int(read)
}

// Write file.
