fn WriteFile(h: Handle, buf: []byte)!: int {
	mut written := u32(0)
	ok := unsafe { cpp.WriteFile(cpp.HANDLE(h), &buf[0], cpp.DWORD(len(buf)), (*cpp.DWORD)(&written), nil) }
	if !ok {
		error(GetLastErrno())
	}
	ret int(written)
}

