// Read file.
// Passes nil for overlap.
fn ReadFile(h: Handle, buf: []byte)!: int {
	mut read := u32(0)
	ok := unsafe { extern.ReadFile(extern.HANDLE(h), &buf[0], extern.DWORD(len(buf)), (*extern.DWORD)(&read), nil) }
	if !ok {
		error(GetLastErrno())
	}
	ret int(read)
}

// Write file.
// Passes nil for overlap.
fn WriteFile(h: Handle, buf: []byte)!: int {
	mut written := u32(0)
	ok := unsafe { extern.WriteFile(extern.HANDLE(h), &buf[0], extern.DWORD(len(buf)), (*extern.DWORD)(&written), nil) }
	if !ok {
		error(GetLastErrno())
	}
	ret int(written)
}

