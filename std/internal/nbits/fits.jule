// Reports whether n fits in bits, for signed integers.
fn Fits(n: i64, bits: uint): bool {
	const MaxBits = 64
	if bits < MaxBits {
		if n < 0 {
			limit := i64(-1) << (bits - 1)
			if n < limit {
				ret false
			}
		} else {
			limit := i64(1)<<(bits-1) - 1
			if n > limit {
				ret false
			}
		}
	}
	ret true
}

// Same as the Fits function, for unsigned integers.
fn FitsU(n: u64, bits: uint): bool {
	const MaxBits = 64
	if bits < MaxBits {
		limit := u64(1)<<bits - 1
		if n > limit {
			ret false
		}
	}
	ret true
}