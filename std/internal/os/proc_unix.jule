use "std/sys"
use "std/unsafe"

fn Getwd()!: str {
	let mut buf: [sys::PATH_MAX]byte
	mut sbuf := unsafe::Slice(&buf[0], len(buf), len(buf))
	n := ignoringEINTR2(fn|| sys::Getcwd(sbuf)?)?
	ret unsafe::StrFromBytes(buf[:n])
}

fn Chdir(path: str)! {
	sys::Chdir(path)?
}