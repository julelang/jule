use "std/sys"
use "std/unsafe"

fn Getwd()!: str {
	let mut buf: [sys::PATH_MAX]byte
	n := sys::Getcwd(unsafe::Slice(&buf[0], len(buf), len(buf))) else { error(error) }
	ret unsafe::StrFromBytes(buf[:n])
}

fn Chdir(path: str)! {
	sys::Chdir(path) else { error(error) }
}