use "std/unicode"
use "std/unicode/utf8"

// Reports whether identifier is public.
fn IsPub(name: str): bool {
	if name[0] < utf8::RuneSelf { // ASCII, fast way.
		b := name[0]
		ret 'A' <= b && b <= 'Z'
	}
	r, _ := utf8::DecodeRuneStr(name)
	ret unicode::IsUpper(r)
}