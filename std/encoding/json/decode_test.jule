#test
fn testCustomDecode(t: &testing::T) {
	mut b := []byte("false")
	mut a := new(abc, -1)
	Decode(b, a) else {
		t.Errorf("want 0, threw exception")
		*a = 0
	}
	if *a != 0 {
		t.Errorf("want 0, found {}", *a)
	}
	*a = -1
	b = []byte("true")
	Decode(b, a) else {
		t.Errorf("want 1, threw exception")
		*a = 1
	}
	if *a != 1 {
		t.Errorf("want 1, found {}", *a)
	}
}

