// Reports whether data is a valid JSON.
fn Valid(data: []byte): bool {
	decoder := jsonDecoder{
		data: data,
		i: 0,
	}
	decoder.skipSpace()
	if decoder.eof() {
		ret false
	}
	for {
		decoder.skip() else { ret false }
		decoder.skipSpace()
		if decoder.eof() {
			break
		}
	}
	ret true
}