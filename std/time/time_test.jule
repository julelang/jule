fn testTimeISO(t: &testing::T) {
	for i, test in isoTests {
		time := Date(test.year, Month(test.month), test.day, 0, 0, 0, 0)
		y, w := time.ISO()
		if y != test.yex || w != test.wex {
			t.Errorf("#{} conversion failed", i)
		}
	}
