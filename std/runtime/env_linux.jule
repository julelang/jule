use "std/sys"
use "std/unsafe"

fn executable(): str {
	mut buf := make([]byte, sys::PATH_MAX)
	n := sys::Readlink("/proc/self/exe", buf) else {
		panic("runtime: executable path read error")
	}
	buf = buf[:n]
	ret unsafe::StrFromBytes(buf)
}