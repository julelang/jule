use "std/sys"

fn setnumcpu() {
	const HW_NCPU = 3
	mut mib := []i32([sys::CTL_HW, HW_NCPU])
	mut ncpu := i32(0)
	let SizeOfNCPU: uint = 4 // 32-bit
	sys::Sysctl(mib, uintptr(&ncpu), uintptr(&SizeOfNCPU), 0, 0)!
	numcpu = int(ncpu)
	if numcpu == 0 {
		numcpu = 1
	}
}