extern unsafe fn GetSystemInfo(info: *extern.SYSTEM_INFO)

#typedef
extern struct SYSTEM_INFO{}

struct systeminfo {
	anon0:                       [4]byte
	dwpagesize:                  u32
	lpminimumapplicationaddress: *byte
	lpmaximumapplicationaddress: *byte
	dwactiveprocessormask:       uintptr
	dwnumberofprocessors:        u32
	dwprocessortype:             u32
	dwallocationgranularity:     u32
	wprocessorlevel:             u16
	wprocessorrevision:          u16
}

fn _GetSystemInfo(mut &info: *systeminfo) {
	unsafe { extern.GetSystemInfo((*extern.SYSTEM_INFO)(info)) }
}