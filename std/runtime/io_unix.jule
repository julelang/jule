use "std/internal/poll"

fn newStdioPoll(h: u64): &poll::FD {
	// File, Pipe, or Console kind.
	// Does not matter for UNIX.
	mut fd := &poll::FD{
		File: h,
		Flags: poll::File,
		IsStream: true,
		ZeroReadIsEOF: true,
	}
	fd.Init()!
	ret fd
}