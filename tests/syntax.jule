fn test_goto() {
	let s = "Hello World"
	{
		let mut ok = false
		{
			if !ok {
				ok = true
				goto bla
			}
			goto test
		}
	bla:
		outln(ok)
	}
test:
	{
		outln("TEST")
		goto end
	}
	outln(s)
end:
}

