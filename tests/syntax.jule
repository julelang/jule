fn test_multiple_return(): (i32, i32, bool) { ret 5, 5, false }

fn test_iter() {
	// Infinity iteration
	for {
		break
		continue
	}

	// While iteration
	for !false {
		break
	}

	// Foreach iteration
	for in "Hello" {
		outln("Jule")
	}

	for index in "Hello" {
		outln(index)
	}

	for _, c in "Hello" {
		outln(c)
	}

	for _, element in ["The", "Jule", "Programming", "Language"] {
		outln(element)
	}

	for index in "TEST" {
		_ = index
	}

	for ; { break }

	let mut a = 0
	for a <= 3; a++ {
		outln(a)
	}
}

