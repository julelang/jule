fn testI8() {
	mut s := i8(i8.Max)
	if s+1 != -128 {
		panic("fail")
	}
	if -s != -127 {
		panic("fail")
	}
	if ^s != -128 {
		panic("fail")
	}
	if s<<1 != -2 {
		panic("fail")
	}
	if s<<3 != -8 {
		panic("fail")
	}
	s = i8.Min
	if s-1 != 127 {
		panic("fail")
	}
	if ^s != 127 {
		panic("fail")
	}
	if s<<1 != 0 {
		panic("fail")
	}
}

