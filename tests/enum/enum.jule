use "std/comptime"

// Common test.
enum Ordinary {
	copyA: 90,
	copyB,
	copyC,
}

fn init() {
	if int(Ordinary.copyA) != 90 {
		panic("copyA != 90")
	}
	if int(Ordinary.copyB) != 90 {
		panic("copyB != 90")
	}
	if int(Ordinary.copyC) != 90 {
		panic("copyC != 90")
	}
}

