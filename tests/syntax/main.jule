fn testGoto() {
	let s = "Hello World"
	{
		let mut ok = false
		{
			if !ok {
				ok = true
				goto bla
			}
			goto test
		}
	bla:
		println(ok)
	}
test:
	{
		println("TEST")
		goto end
	}
	println(s)
end:
}

