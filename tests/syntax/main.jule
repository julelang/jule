fn testIter() {
	// Infinity iteration
	for {
		break
		continue
	}

	// While iteration
	for !false {
		break
	}

	// Foreach iteration
	for in "Hello" {
		println("Jule")
	}

	for index in "Hello" {
		println(index)
	}

	for _, c in "Hello" {
		println(c)
	}

	for _, element in ["The", "Jule", "Programming", "Language"] {
		println(element)
	}

	for index in "TEST" {
		_ = index
	}

	for {
		break
	}

	let mut a = 0
	for a <= 3; a++ {
		println(a)
	}
}

