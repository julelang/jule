use "std/bufio"
use "std/conv"
use "std/fmt"
use "std/os"

let mut scan = bufio::Scanner.New(os::Stdin())

async fn readLine(): str {
	scan.Scan().await!
	ret scan.Text()
}

async fn numericInput(msg: str)!: f64 {
	fmt::Print(msg)
	input := readLine().await
	ret conv::ParseFloat(input, 64) else { error(false) }
}

async fn main() {
	for {
		let l = numericInput("Input left: ").await else {
			fmt::Println("Invalid left!")
			continue
		}
		let r = numericInput("Input right: ").await else {
			fmt::Println("Invalid right!")
			continue
		}
		fmt::Print("Choose your op: + - / *\nYour op: ")
		let input = readLine().await
		match input {
		| "+":
			fmt::Println(l + r)
		| "-":
			fmt::Println(l - r)
		| "*":
			fmt::Println(l * r)
		| "/":
			fmt::Println(l / r)
		|:
			fmt::Println("Invalid operation!")
		}
	}
}